@model DatingApp.Models.ProfileViewModels.ProfileIndexViewModel

@{
    ViewBag.Title = "Your profile";
}


<div class="m-top">
    <div class="col-sm-4">
        <div class="panel panel-default">
            <div class="panel-heading text-center">
                <img src="@Url.Content(Model.Image)" alt="Image" class="img-thumbnail profile-image" />
                <h1 class="panel-title" id="profile-name-space">@Html.DisplayFor((m) => m.Name)</h1>
                @if (!Model.Active) {<h6>(Deactivated)</h6> }
            </div>
            <div class="panel-body text-center">
                <table class="table table-responsive">
                    <tr>
                        <td>@Html.LabelFor(m => m.Age, htmlAttributes: new { @class = "control-label col-md-2" })</td>
                        <td><p>@Html.DisplayFor((m) => m.Age, new { @class = "control-label col-md-6" })</p></td>
                    </tr>
                    <tr>
                        <td>@Html.LabelFor(m => m.Gender, htmlAttributes: new { @class = "control-label col-md-2" })</td>
                        <td><p>@Html.DisplayFor((m) => m.Gender, new { @class = "control-label col-md-6" })</p></td>
                    </tr>
                    <tr>
                        <td>@Html.LabelFor(m => m.Biography, htmlAttributes: new { @class = "control-label col-md-2" })</td>
                        <td><em>@Html.DisplayFor((m) => m.Biography, new { @class = "control-label col-md-6" })</em></td>
                    </tr>
                </table>
                <input type="button"
                       value="Edit"
                       class="btn btn-default"
                       onclick="location.href='@Url.Action("Edit", "Profile" )'" />
                <input type="button"
                       value="Manage login"
                       class="btn btn-default"
                       onclick="location.href='@Url.Action("Index", "Manage" )'" />
                <input type="button"
                       value="Download as XML"
                       class="btn btn-default"
                       onclick="location.href='@Url.Action("Download", "Profile" )',alert('File placed in folder named ExportUserData')" />
                <hr />

                @if (Model.Active == true)
                {

                <input type="button"
                       value="Disable my account"
                       class="btn btn-danger"
                       onclick="location.href='@Url.Action("AlterActiveStatus", "Profile")'" />
                }
                else
                {
                <input type="button"
                       value="Re-activate my account"
                       class="btn btn-success"
                       onclick="location.href='@Url.Action("AlterActiveStatus", "Profile")'" />
                }
            </div>
        </div>
    </div>
</div>

<div class="m-top">
    <div class="col-sm-8">
        @Html.Partial("~/Views/Post/Index.cshtml")
    </div>
</div>