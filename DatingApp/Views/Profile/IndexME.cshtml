@model DatingApp.Models.ProfileViewModels.ProfileIndexViewModel

@{
    ViewBag.Title = "Your profile";
}


<div class="m-top">
    <div class="col-sm-4">
        <div class="panel panel-default">
            <div class="panel-heading text-center">
                <img src="@Url.Content(Model.Image)" alt="Image" class="img-thumbnail profile-image" />
                <h1 class="panel-title" id="profile-name-space">@Html.DisplayFor((m) => m.Name)</h1>
                @if (!Model.Active)
                {<h6>(Deactivated)</h6>}
            </div>
            <div class="panel-body text-center">
                <table class="table table-responsive">
                    <tr>
                        <td>@Html.LabelFor(m => m.Age, htmlAttributes: new { @class = "control-label col-md-2" })</td>
                        <td><p>@Html.DisplayFor((m) => m.Age, new { @class = "control-label col-md-6" })</p></td>
                    </tr>
                    <tr>
                        <td>@Html.LabelFor(m => m.Gender, htmlAttributes: new { @class = "control-label col-md-2" })</td>
                        <td><p>@Html.DisplayFor((m) => m.Gender, new { @class = "control-label col-md-6" })</p></td>
                    </tr>
                    <tr>
                        <td>@Html.LabelFor(m => m.Biography, htmlAttributes: new { @class = "control-label col-md-2" })</td>
                        <td><em>@Html.DisplayFor((m) => m.Biography, new { @class = "control-label col-md-6" })</em></td>
                    </tr>
                    <tr>
                        <td class="col-md-2">@Html.LabelFor(m => m.CSharp, htmlAttributes: new { @class = "control-label col-md-2" })</td>
                        <td class="col-md-10">
                            <div class="progress" id="csharp-progress">
                                <div class="progress-bar" id="progress-bar-csharp" aria-valuemin="0" aria-valuemax="100" data-value="@Model.CSharp"></div>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td class="col-md-2">@Html.LabelFor(m => m.JavaScript, htmlAttributes: new { @class = "control-label col-md-2" })</td>
                        <td class="col-md-10">
                            <div class="progress" id="javascript-progress">
                                <div class="progress-bar" id="progress-bar-javascript" aria-valuemin="0" aria-valuemax="100" data-value="@Model.JavaScript"></div>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td class="col-md-2">@Html.LabelFor(m => m.StackOverflow, htmlAttributes: new { @class = "control-label col-md-2" })</td>
                        <td class="col-md-10">
                            <div class="progress" id="stackoverflow-progress">
                                <div class="progress-bar" id="progress-bar-stackoverflow" aria-valuemin="0" aria-valuenow="0" aria-valuemax="100" data-value="@Model.StackOverflow"></div>
                            </div>
                        </td>
                    </tr>
                </table>
                <input type="button"
                       value="Edit"
                       class="btn btn-default"
                       onclick="location.href='@Url.Action("Edit", "Profile" )'" />
                <input type="button"
                       value="Manage login"
                       class="btn btn-default"
                       onclick="location.href='@Url.Action("Index", "Manage" )'" />
                <input type="button"
                       value="Download as XML"
                       class="btn btn-default"
                       onclick="location.href='@Url.Action("Download", "Profile" )', alert('File placed in folder named ExportUserData')" />
                <hr />

                <input type="button"
                       value="De-activate my account"
                       class="btn btn-danger"
                       onclick="location.href='@Url.Action("DisableAccount", "Profile")'" />
            </div>
        </div>

        <div class="panel panel-default">
            <div class="panel-heading text-center">
                <h1 class="panel-title">Latest visitors</h1>
            </div>
            <div class="panel-body">
                <ul id="visitor-list">

                    @*<li><a href="@Url.Action("Index", "Profile", new { userId = visitor.Id })"><span>@visitor.Name</span></a></li>*@

                </ul>
            </div>
        </div>
    </div>
</div>

<div class="m-top">
    <div class="col-sm-8">
        @Html.Partial("~/Views/Post/Index.cshtml")
    </div>
</div>

@Scripts.Render("~/bundles/visitors")
@Scripts.Render("~/bundles/profiles")