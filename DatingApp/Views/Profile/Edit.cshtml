@model DatingApp.Models.ProfileViewModels.ProfileIndexViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit profile</h2>

@using (Html.BeginForm("Edit", "Profile", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    <img src="@Url.Content(Model.Image)" alt="Image" class="profile-image" />
    <br />
    <strong>Image</strong>
    <br />
    <div class="col-md-10">
        <input type="file" name="file" />
    </div>
    <br />
    <br />
    <strong>Name</strong>
    <br />
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>
    <br />
    <br />
    <strong>Age</strong>
    <br />
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.Age, new { @class = "form-control" })
    </div>
    <br />
    <br />
    <strong>Gender</strong>
    <br />
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.Gender, new { @class = "form-control" })
    </div>
    <br />
    <br />
    <strong>Biography</strong>
    <br />
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.Biography, new { @class = "form-control" })
    </div>
    <br />
    <br />
    <div class="form-group">
        <div class="col-md-offset-1 col-md-10">
            <input type="submit" class="btn btn-default" value="Save changes" />
        </div>
    </div>
}