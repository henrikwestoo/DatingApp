@using Microsoft.AspNet.Identity;
@model DatingApp.Models.ProfileViewModels.ProfilesIndexViewModel

@{
    ViewBag.Title = "Search";
}


<h2>Search results</h2>

<table class="table table-bordered">

    <tr>
        <th>Name</th>
        <th>Age</th>
        <th>Gender</th>
        <th>View</th>
        <th>Add</th>
    </tr>

    @foreach (var item in Model.Profiles)
    {
        <tr>
            <td>@item.Name </td>
            <td>@item.Age</td>
            <td>@item.Gender</td>
            <td>
                @using (Html.BeginForm("Index", "Profile", FormMethod.Get))
                {
                    @Html.Hidden("userId", item.Id)
                    <input type="submit"
                           value="See profile"
                           class="btn btn-primary" />

                }
            </td>
            <td>
                @using (Html.BeginForm("AddContact", "Contact", FormMethod.Post))
                {
                    @Html.Hidden("contactProfileId", item.Id)
                    <input type="submit"
                           value="Add contact"
                           class="btn btn-success" />
                }
            </td>
        </tr>
    }


</table>
